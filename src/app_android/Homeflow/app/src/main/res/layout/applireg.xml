<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/applireg_back">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
        <ListView
                android:id="@+id/appli_reg_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:dividerHeight="70px"
                android:divider="#00000000">
        </ListView>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/appli_reg_to_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/applireg_back_btn"/>
            <TextView
                    android:id="@+id/appli_reg_to_edit_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="이전 화면"
                    android:background="#FF2C486D"
                    android:textColor="#FFCA93E8"/>
            <Button
                android:id="@+id/appli_reg_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/applireg_add_btn"/>
            <TextView
                android:id="@+id/appli_reg_add_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="추가"
                android:background="#FF2C486D"
                android:textColor="#FFCA93E8"/>
            <Button
                android:id="@+id/appli_reg_del"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/applireg_del_btn"/>
            <TextView
                android:id="@+id/appli_reg_del_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="삭제"
                android:background="#FF2C486D"
                android:textColor="#FFCA93E8"/>
    </LinearLayout>
</LinearLayout>