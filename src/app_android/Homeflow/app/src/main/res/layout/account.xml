<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/account_frag"
              android:orientation="vertical"
              android:gravity="center_horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#FF2A3F13">

        <TextView
                android:id="@+id/make_acc_txt"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="계정 만들기"
                android:textColor="#FFCA93E8"
                android:textAppearance="?android:attr/textAppearanceLarge"/>

        <EditText
                android:id="@+id/login_id_edit"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:hint="ID를 입력하세요"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#FFFFFFFF"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:inputType="text"/>

        <ImageView
                android:id="@+id/login_id_edit_uline"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_id_edit"
                android:background="@drawable/edit_underline"/>

        <EditText
                android:id="@+id/login_pw_edit"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_id_edit"
                android:layout_marginTop="10dp"
                android:hint="PW를 입력하세요"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#FFFFFFFF"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:inputType="textPassword"/>

        <ImageView
                android:id="@+id/login_pw_edit_uline"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_pw_edit"
                android:background="@drawable/edit_underline"/>

        <EditText
                android:id="@+id/login_pw_check_edit"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_pw_edit_uline"
                android:layout_marginTop="10dp"
                android:hint="PW를 확인하세요"
                android:textColor="#FFFFFFFF"
                android:textColorHint="#FFFFFFFF"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:inputType="textPassword"/>

        <ImageView
                android:id="@+id/login_pw_check_edit_uline"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_pw_check_edit"
                android:background="@drawable/edit_underline"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal"/>

        <LinearLayout
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="135dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                                android:id="@+id/age_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="｜ 연령 ｜"
                                android:textColor="#FFCA93E8"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                        <Spinner
                                android:id="@+id/age_spin"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawSelectorOnTop="true"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="135dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                                android:id="@+id/sex_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="｜ 성별 ｜"
                                android:textColor="#FFCA93E8"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                        <Spinner
                                android:id="@+id/sex_spin"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawSelectorOnTop="true"/>
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:orientation="horizontal"/>

        <LinearLayout
                android:layout_width="270dp"
                android:layout_height="55dp"
                android:orientation="horizontal">
                <LinearLayout
                        android:layout_width="135dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                                android:id="@+id/job_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="｜ 직업 ｜"
                                android:textColor="#FFCA93E8"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                        <Spinner
                                android:id="@+id/job_spin"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawSelectorOnTop="true"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="135dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <TextView
                                android:id="@+id/maintime_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="｜ 주활동시간 ｜"
                                android:textColor="#FFCA93E8"
                                android:textAppearance="?android:attr/textAppearanceMedium"/>
                        <Spinner
                                android:id="@+id/maintime_spin"
                                android:layout_marginTop="5dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawSelectorOnTop="true"/>
                </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:orientation="horizontal"/>

        <Button
                android:id="@+id/signup_btn"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_pw_edit_uline"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="등록"
                android:textColor="#FFFFFFFF"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:background="#FFCA93E8"/>

</LinearLayout>