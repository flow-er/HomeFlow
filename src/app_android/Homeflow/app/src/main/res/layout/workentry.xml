<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/applireg_back">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="200dp">

        <LinearLayout
                android:layout_width="15dp"
                android:layout_height="match_parent"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:background="#2EFFFFFF">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/cond_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#FF2A3F13"
                        android:text="입력한 조건을 띄우는 부분"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="2">
                <Button
                        android:id="@+id/cond_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FF404ED2"
                        android:text="조건 입력"
                        android:textColor="#FFFFFFFF"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
                android:layout_width="15dp"
                android:layout_height="match_parent"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:background="#2EFFFFFF">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/loop_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#FF2A3F13"
                        android:text="입력한 루프조건을 띄우는 부분"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="2">
                <Button
                        android:id="@+id/loop_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FF404ED2"
                        android:text="루프 입력"
                        android:textColor="#FFFFFFFF"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="15dp"
                android:layout_height="match_parent"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="100dp"
                android:layout_height="200dp"
                android:background="#2EFFFFFF">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/appli_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#FF2A3F13"
                        android:text="입력한 기기를 띄우는 부분"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="2">
                <Button
                        android:id="@+id/appli_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#FF404ED2"
                        android:text="기기 입력"
                        android:textColor="#FFFFFFFF"
                        android:textAppearance="?android:attr/textAppearanceSmall"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:gravity="center">

        <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">

        <Button
                android:id="@+id/work_entry_btn"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="등록 완료"
                android:background="#FF2C486D"
                android:textColor="#FFFFFFFF"/>

    </LinearLayout>

</LinearLayout>