<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="@drawable/applireg_back">

    <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/cond_back">

            <Button
                    android:id="@+id/cond_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="#FF404ED2"
                    android:text="조건 입력"
                    android:textColor="#FFFFFFFF"/>

            <TextView
                    android:id="@+id/cond_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FF2C486D"
                    android:text="입력한 조건을 띄우는 부분"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/app_back">

            <Button
                    android:id="@+id/appli_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="#FF404ED2"
                    android:text="기기 입력"
                    android:textColor="#FFFFFFFF"/>

            <TextView
                    android:id="@+id/appli_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FF2C486D"
                    android:text="입력한 기기를 띄우는 부분"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:gravity="center">

            <Button
                    android:id="@+id/work_entry_btn"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="등록 완료"
                    android:background="#FF2C486D"
                    android:textColor="#FFFFFFFF"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"/>

</LinearLayout>